<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <default-target-parameters xsi:type="File" keepFileOpen="false"/>
        <target name="logdebug" 
                layout="DateTime::${longdate}||LogLevel::${level}||Logger::${logger}||${message} ${exception:format=ToString}" 
                fileName="../../../Logs/${shortdate}.log"/>
        <target name="logfatal" fileName="../../../Logs/FatalLog.log" layout="DateTime::${longdate}||${message} ${exception:format=tostring}"/>
        <target name="loginfo" fileName="../../../Logs/InfoLog.log" layout="DateTime::${longdate}||${message} ${exception:format=tostring}"/>
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="logdebug" />
        <logger name="*" minlevel="Info" writeTo="loginfo" />
        <logger name="*" minlevel="Fatal" writeTo="logfatal" />
    </rules>
</nlog>